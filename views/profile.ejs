<%- include("partials/header") %>

	<div class="container">
		<div class="jumbotron profile-info">
			<div class="row">
				<div class="col-md-6">
					<img class="profile-photo" src="https://images.all-free-download.com/images/graphicthumb/camping_background_tent_mount_icons_colored_3d_decor_6829461.jpg" alt="">
				</div>
				<div class="col-md-6">
					<span>Kullanıcı Adı :
						<strong>
							<%= currentUser.username %>
						</strong>
					</span>
					<br>
					<br> <%= data.length %> post yayınladınız
					<hr> <%= countedComment %> yorum yapıldı
					<br><br>
					<a class="btn btn-success" href="/kamp-yerleri/yeni-ekle">Yeni Kamp Ekle <i class="fas fa-plus"></i></a>
				</div>
			</div>
		</div>
		
		<h4>
			Yayınladığınız Kamp Alanları
		</h4>
		
	</div>



	<% data.forEach((post) => { %>

		<section>
			<div class="container py-3">
				<div class="card">
					<div class="row ">
						<div class="col-md-4">
							<img src="<%= post.image %>" class="w-100">
						</div>
						<div class="col-md-8 px-3" style="padding : 20px 0">
							<div class="card-block px-3">
								<h4 class="card-title">
									<%= post.name %>
										<span style="float : right">
											<a href="/kamp-yerleri/<%= post._id %>/edit" class="btn btn-sm btn-warning">Düzenle
												<i class="fas fa-edit"></i>
											</a>
											<form method="POST" action="/kamp-yerleri/<%= post._id %>?_method=DELETE" style="display : inline">
												<button class="btn btn-sm btn-danger">Sil
													<i class="fas fa-trash-alt"></i>
												</button>
											</form>
										</span>
								</h4>
								<p class="card-text">
									<%= post.description %>
								</p>
								<p style="color: grey; font-size : 12px">(<%= post.comments.length %>) yorum yapıldı</p>
								<a href="/kamp-yerleri/<%= post._id %>" class="btn btn-primary">Devamını Oku</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<% }); %>

			<%- include("partials/footer") %>